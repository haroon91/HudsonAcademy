<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0FFFFFF">

    <View android:background="@color/app_gray" android:layout_width="match_parent" android:layout_height="0.6dp" android:id="@+id/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <RelativeLayout
            android:id="@+id/hotpick_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="26dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/iv_hotpick"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="0dp"
                        android:src="@drawable/hotpick"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_hotpick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Hot Pick"
                    android:textSize="12dp"
                    android:layout_marginBottom="0dp"
                    android:textColor="@color/app_gray"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/advfilter_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="26dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/iv_advfilter"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="0dp"
                        android:src="@drawable/advfilter"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_advfilter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Advanced Filter"
                    android:layout_marginBottom="0dp"
                    android:textSize="12dp"
                    android:textColor="@color/app_gray" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>