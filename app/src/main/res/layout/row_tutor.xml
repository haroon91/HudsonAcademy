<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="4dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:id="@+id/civ_icon"
        android:src="@drawable/user_icon_anonymous"
        app:border_width="1dp"
        app:border_color="@color/dark_purple"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_tutorname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Haroon Shahid"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/civ_icon"
        android:layout_toEndOf="@+id/civ_icon"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subjects: Mathematics, Physics, Chemistry,"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/tv_tutorname"
        android:layout_alignLeft="@+id/tv_tutorname"
        android:layout_alignStart="@+id/tv_tutorname" />

</RelativeLayout>